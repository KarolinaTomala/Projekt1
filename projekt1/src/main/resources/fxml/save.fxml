<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="150.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.SaveController">
   <children>
      <Label text="Enter the path and file name in which">
         <VBox.margin>
            <Insets bottom="2.0" top="20.0" />
         </VBox.margin></Label>
      <Label text="you want to save the data from the chart:">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="txtFileName" promptText="planetsTrajectory" />
      <Button fx:id="buttonSave" mnemonicParsing="false" onAction="#buttonSavePressed" prefHeight="20.0" prefWidth="70.0" text="Save">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
